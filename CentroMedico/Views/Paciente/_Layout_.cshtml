<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>CentroMedico</title>
    @Styles.Render("~/Content/css")
</head>
<body>


    <div class="contenedor">
        <!--===========================
              barra de Logotipo
        ============================-->
        <header class="fila">
            <div class="col-lg-12">
                <img src="~/Imagenes/sifco-logo.jpg" alt="Avatar" style="width:25%">
            </div>
        </header>

        <!--===========================
                 NavBar
        ============================-->
        <nav class="fila">
            <ul>
                <li class="col-lg-3">@Html.ActionLink("Home", "Index")</li>
                <li class="col-lg-3">@Html.ActionLink("Mi perfil", "Perfil")</li>
                <li class="col-lg-3">@Html.ActionLink("Citas", "Citas")</li>
                <li class="col-lg-3">@Html.ActionLink("Salir", "Salir")</li>
            </ul>
        </nav>

        @RenderBody()


        <!--===========================
          Pie de pagina
        ============================-->
        <footer class="fila">
            <div class="col-lg-12"> &copy;Todos los derechos reservados.</div>
        </footer>
    </div>

</body>
</html>
